<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    tools:context=".activity.ConfirmacaoFinalizarCorridaActivity">

    <TextView
        android:id="@+id/txtParabens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/msg_parabens"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/pago"
        android:textAlignment="center"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/trofeuFundo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="trofeu"
        app:srcCompat="@drawable/trofeu" />

    <Button

        android:id="@+id/botao_ir_para_inicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/botao_cadastre"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:onClick="confirmar"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/ir_para_inicio"
        android:textColor="#FFFFFF"
        android:textSize="22sp" />

</LinearLayout>