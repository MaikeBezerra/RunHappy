<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundoapp2"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:gravity="end"
        android:orientation="vertical"
        android:paddingStart="@dimen/browser_actions_context_menu_min_padding"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:paddingEnd="@dimen/browser_actions_context_menu_min_padding">

        <Button

            android:id="@+id/botao_cadastre_se"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/botao_cadastre"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:onClick="cadastrar"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/cadastre_se"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingStart="@dimen/browser_actions_context_menu_min_padding"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:paddingEnd="@dimen/browser_actions_context_menu_min_padding"
        android:paddingBottom="@dimen/fab_margin">

        <Button
            android:id="@+id/botao_login"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/botao_login"
            android:fontFamily="sans-serif"
            android:onClick="logar"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/login"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />
    </LinearLayout>

</LinearLayout>